---
import { getCollection } from 'astro:content';
import DocLayout from '../../layouts/DocLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
      allPosts: posts
    },
  }));
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

// Find related posts (same tags, exclude current)
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .map(p => ({
    ...p,
    score: (p.data.tags || []).filter(tag => (post.data.tags || []).includes(tag)).length
  }))
  .filter(p => p.score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, 3);

// Generate tag URL
function tagUrl(tag: string) {
  return '/blog/tags/' + tag.toLowerCase().replace(/\s+/g, '-').replace(/[.]/g, '');
}

// Article Schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "datePublished": post.data.date.toISOString(),
  "author": {
    "@type": "Organization",
    "name": "MST 測速"
  },
  "publisher": {
    "@type": "Organization",
    "name": "MST 測速",
    "logo": {
      "@type": "ImageObject",
      "url": "https://myspeedtest.isnowfriend.com/og-image.jpg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://myspeedtest.isnowfriend.com/blog/${post.slug}`
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "首頁",
      "item": "https://myspeedtest.isnowfriend.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "部落格",
      "item": "https://myspeedtest.isnowfriend.com/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.data.title,
      "item": `https://myspeedtest.isnowfriend.com/blog/${post.slug}`
    }
  ]
};
---

<DocLayout
  title={post.data.title}
  description={post.data.description}
  canonical={'https://myspeedtest.isnowfriend.com/blog/' + post.slug}
  ogType="article"
  schema={[articleSchema, breadcrumbSchema]}
>
  <article class="blog-post">
    <nav class="breadcrumb">
      <a href="/">首頁</a>
      <span>/</span>
      <a href="/blog">部落格</a>
      <span>/</span>
      <span>{post.data.title.length > 20 ? post.data.title.slice(0, 20) + '...' : post.data.title}</span>
    </nav>

    <header class="post-header">
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {post.data.tags && (
          <div class="tags">
            {post.data.tags.map((tag) => (
              <a href={tagUrl(tag)} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="post-content">
      <Content />
    </div>

    {relatedPosts.length > 0 && (
      <aside class="related-posts">
        <h2>相關文章</h2>
        <div class="related-grid">
          {relatedPosts.map((related) => (
            <a href={`/blog/${related.slug}`} class="related-item">
              <span class="related-date">
                {related.data.date.toLocaleDateString('zh-TW', { month: 'short', day: 'numeric' })}
              </span>
              <h3>{related.data.title}</h3>
            </a>
          ))}
        </div>
      </aside>
    )}

    <nav class="post-nav">
      <a href="/blog" class="back-to-blog">← 返回部落格</a>
    </nav>
  </article>
</DocLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 30px 20px 80px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--gray);
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: var(--gray);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--white);
  }

  .breadcrumb span:last-child {
    color: var(--white);
  }

  .post-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 50px;
    padding-top: 20px;
  }

  .post-header h1 {
    font-size: clamp(24px, 5vw, 38px);
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 24px;
    color: var(--white);
    max-width: 100%;
    word-break: keep-all;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    color: var(--gray);
    font-size: 14px;
    width: 100%;
  }

  .post-meta time {
    display: block;
  }

  .tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
    max-width: 100%;
  }

  .tag {
    background: var(--bg-light);
    padding: 6px 14px;
    border-radius: 100px;
    font-size: 13px;
    white-space: nowrap;
    color: var(--gray);
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag:hover {
    background: var(--yellow);
    color: #000;
  }

  .post-content {
    font-size: 17px;
    line-height: 1.8;
    color: var(--gray);
  }

  .post-content :global(h2) {
    font-size: clamp(22px, 4vw, 26px);
    font-weight: 600;
    color: var(--white);
    margin: 50px 0 20px;
    padding-left: 15px;
    border-left: 4px solid var(--yellow);
  }

  .post-content :global(h3) {
    font-size: clamp(18px, 3.5vw, 20px);
    font-weight: 600;
    color: var(--white);
    margin: 35px 0 15px;
  }

  .post-content :global(h4) {
    font-size: clamp(16px, 3vw, 18px);
    font-weight: 600;
    color: var(--white);
    margin: 30px 0 12px;
  }

  .post-content :global(p) {
    margin-bottom: 20px;
  }

  .post-content :global(strong) {
    color: var(--white);
  }

  .post-content :global(a) {
    color: var(--blue);
    text-decoration: none;
  }

  .post-content :global(a:hover) {
    text-decoration: underline;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--yellow);
    margin: 30px 0;
    padding: 15px 25px;
    background: var(--bg-light);
    border-radius: 0 12px 12px 0;
    font-style: italic;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 20px 0;
    padding-left: 25px;
  }

  .post-content :global(li) {
    margin-bottom: 10px;
  }

  .post-content :global(img) {
    max-width: 100%;
    border-radius: 12px;
    margin: 30px 0;
  }

  .post-content :global(code) {
    background: var(--bg-light);
    padding: 2px 8px;
    border-radius: 4px;
    font-family: 'SF Mono', Monaco, monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: #1a1a1a;
    padding: 20px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 25px 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 15px;
    overflow-x: auto;
    display: block;
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid var(--gray-dark);
    min-width: 120px;
  }

  .post-content :global(th) {
    color: var(--yellow);
    font-weight: 600;
    white-space: nowrap;
  }

  /* Related Posts */
  .related-posts {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--gray-dark);
  }

  .related-posts h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 25px;
  }

  .related-grid {
    display: grid;
    gap: 15px;
  }

  .related-item {
    display: block;
    background: var(--bg-card);
    border: 1px solid var(--gray-dark);
    border-radius: 10px;
    padding: 18px 20px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .related-item:hover {
    border-color: var(--yellow);
    transform: translateX(5px);
  }

  .related-date {
    font-size: 12px;
    color: var(--gray);
  }

  .related-item h3 {
    font-size: 15px;
    font-weight: 500;
    color: var(--white);
    margin-top: 6px;
    line-height: 1.4;
  }

  .post-nav {
    margin-top: 40px;
    text-align: center;
  }

  .back-to-blog {
    color: var(--gray);
    text-decoration: none;
    font-size: 14px;
  }

  .back-to-blog:hover {
    color: var(--white);
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 20px 16px 60px;
    }

    .post-header {
      padding-top: 20px;
      margin-bottom: 40px;
    }

    .post-header h1 {
      font-size: 22px;
      margin-bottom: 20px;
    }

    .post-meta {
      gap: 12px;
    }

    .tags {
      gap: 6px;
    }

    .tag {
      padding: 5px 10px;
      font-size: 12px;
    }

    .post-content {
      font-size: 16px;
    }

    .post-content :global(blockquote) {
      padding: 12px 16px;
      margin: 20px 0;
    }

    .post-content :global(pre) {
      padding: 15px;
      font-size: 13px;
    }

    .related-posts {
      margin-top: 50px;
      padding-top: 30px;
    }
  }

  @media (max-width: 480px) {
    .post-header h1 {
      font-size: 20px;
    }

    .post-content :global(h2) {
      font-size: 20px;
      padding-left: 12px;
    }

    .post-content :global(h3) {
      font-size: 18px;
    }
  }
</style>
