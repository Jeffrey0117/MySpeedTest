---
import { getCollection } from 'astro:content';
import DocLayout from '../../layouts/DocLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<DocLayout
  title={post.data.title}
  description={post.data.description}
  canonical={'https://myspeedtest.isnowfriend.com/blog/' + post.slug}
  ogType="article"
>
  <article class="blog-post">
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {post.data.tags && (
          <div class="tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="post-content">
      <Content />
    </div>
  </article>
</DocLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }

  .post-header {
    text-align: center;
    margin-bottom: 50px;
    padding-top: 40px;
  }

  .post-header h1 {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 20px;
    color: var(--white);
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    color: var(--gray);
    font-size: 14px;
  }

  .tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .tag {
    background: var(--bg-light);
    padding: 4px 12px;
    border-radius: 100px;
    font-size: 12px;
  }

  .post-content {
    font-size: 17px;
    line-height: 1.8;
    color: var(--gray);
  }

  .post-content :global(h2) {
    font-size: 26px;
    font-weight: 600;
    color: var(--white);
    margin: 50px 0 20px;
    padding-left: 15px;
    border-left: 4px solid var(--yellow);
  }

  .post-content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: var(--white);
    margin: 35px 0 15px;
  }

  .post-content :global(p) {
    margin-bottom: 20px;
  }

  .post-content :global(strong) {
    color: var(--white);
  }

  .post-content :global(a) {
    color: var(--blue);
    text-decoration: none;
  }

  .post-content :global(a:hover) {
    text-decoration: underline;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--yellow);
    margin: 30px 0;
    padding: 15px 25px;
    background: var(--bg-light);
    border-radius: 0 12px 12px 0;
    font-style: italic;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 20px 0;
    padding-left: 25px;
  }

  .post-content :global(li) {
    margin-bottom: 10px;
  }

  .post-content :global(img) {
    max-width: 100%;
    border-radius: 12px;
    margin: 30px 0;
  }

  .post-content :global(code) {
    background: var(--bg-light);
    padding: 2px 8px;
    border-radius: 4px;
    font-family: 'SF Mono', Monaco, monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: #1a1a1a;
    padding: 20px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 25px 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 24px;
    }
  }
</style>
